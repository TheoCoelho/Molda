{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "types": ["vite/client"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false
  },
  "include": ["src"]
}
